<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.scalaide.worksheet.editor.ScriptEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="sc"
            icon="icons/sample.gif"
            id="org.scalaide.worksheet.editors.ScriptEditor"
            name="Scala Script editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.scalaide.worksheet.commands.category"
            name="Worksheet commands">
      </category>
      <command
            categoryId="org.scalaide.worksheet.commands.category"
            id="org.scalaide.worksheet.commands.evalScript"
            name="Evaluate Script">
      </command>
      <command
            categoryId="org.scalaide.worksheet.commands.category"
            defaultHandler="org.scalaide.worksheet.handlers.Format"
            id="org.scalaide.worksheet.commands.format"
            name="Format">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.scalaide.worksheet.handlers.EvalScript"
            commandId="org.scalaide.worksheet.commands.evalScript">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.scalaide.worksheet.commands.evalScript"
            contextId="org.scalaide.worksheet.editorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+B">
      </key>
      <key
            commandId="org.scalaide.worksheet.commands.format"
            contextId="org.scalaide.worksheet.editorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+F">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="org.scalaide.worksheet.menus.sampleMenu"
               label="Worksheet"
               mnemonic="w">
            <command
                  commandId="org.scalaide.worksheet.commands.evalScript"
                  id="org.scalaide.worksheet.menus.evalScript"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.scalaide.worksheet.toolbars.sampleToolbar">
            <command
                  commandId="org.scalaide.worksheet.commands.evalScript"
                  icon="icons/run_worksheet.gif"
                  id="org.scalaide.worksheet.toolbars.evalScript"
                  tooltip="Evaluate the curent worksheet">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.ui.IEditorInput"
            class="org.scalaide.worksheet.AdapterFactory">
         <adapter
               type="scala.tools.eclipse.InteractiveCompilationUnit">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.scala-ide.sdt.core.wizards"
            class="org.scalaide.worksheet.wizards.NewWorksheetWizard"
            finalPerspective="org.scala-ide.sdt.core.perspective"
            icon="icons/sample.gif"
            id="org.scalaide.worksheet.wizards.newWorksheet"
            name="Scala Worksheet"
            project="false">
            <description>Create a Scala worksheet</description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.scala-ide.sdt.core.perspective">
         <newWizardShortcut
               id="org.scalaide.worksheet.wizards.newWorksheet">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            description="Scala worksheet editor"
            id="org.scalaide.worksheet.editorScope"
            name="Editing Scala Worksheet"
            parentId="org.eclipse.ui.textEditorScope">
      </context>
   </extension>
</plugin>
